jours_semaine = ["lundi", "mardi", "mercredi", "jeudi", "vendredi", "samedi", "dimanche"]

meteo_jours = {
    "lundi": "ensoleillé",
    "mardi": "nuageux",
    "mercredi": "pluvieux",
    "jeudi": "orageux",
    "vendredi": "ensoleillé",
    "samedi": "neigeux",
    "dimanche": "variable"
}

# Demande à l'utilisateur de choisir un jour de la semaine
jour_choisi = input("Choisissez un jour de la semaine : ")

# Vérifie si le jour choisi est valide
if jour_choisi.lower() in jours_semaine:
    meteo = meteo_jours[jour_choisi.lower()]
    print("La météo pour", jour_choisi.capitalize(), "est", meteo)
else:
    print("Jour invalide. Veuillez choisir parmi les jours de la semaine.")
