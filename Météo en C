#include <stdio.h>
#include <string.h>

int main() {
    char jours_semaine[7][15] = {"lundi", "mardi", "mercredi", "jeudi", "vendredi", "samedi", "dimanche"};
    
    char meteo_jours[7][15] = {"ensoleillé", "nuageux", "pluvieux", "orageux", "ensoleillé", "neigeux", "variable"};
    
    char jour_choisi[15];
    printf("Choisissez un jour de la semaine : ");
    scanf("%s", jour_choisi);
    
    int i;
    int jour_valide = 0;
    char meteo[15];
    
    for (i = 0; i < 7; i++) {
        if (strcmp(jour_choisi, jours_semaine[i]) == 0) {
            jour_valide = 1;
            strcpy(meteo, meteo_jours[i]);
            break;
        }
    }
    
    if (jour_valide) {
        printf("La météo pour %s est %s.\n", jour_choisi, meteo);
    } else {
        printf("Jour invalide. Veuillez choisir parmi les jours de la semaine.\n");
    }
    
    return 0;
}
